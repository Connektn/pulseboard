root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{kt,kts}]
indent_size = 4

[*.{md,yml,yaml}]
trim_trailing_whitespace = false

[*.java]
indent_size = 4

[*.gradle]
indent_size = 4

[Makefile]
indent_style = tab